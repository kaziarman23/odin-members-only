<% layout('layout') -%>

<h2>Create a New Message</h2>

<form action="/messages/new" method="post">
  <label
    >Title:<br />
    <input type="text" name="title" required /> </label
  ><br />

  <label
    >Message:<br />
    <textarea name="text" rows="4" required></textarea></label
  ><br />

  <button type="submit">Post Message</button>
</form>
